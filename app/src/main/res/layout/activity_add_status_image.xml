                android:textStyle="bold" />
        </LinearLayout>
-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_crop"
                android:backgroundTint="@color/white" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_edit"
                android:backgroundTint="@color/white" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!--<ImageView
        android:id="@+id/image_view"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/ic_person"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->
    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/image_view"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/ic_person"
        app:zoomage_doubleTapToZoom="true"
        app:zoomage_autoCenter="true"
        app:zoomage_animateOnReset="true"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_pic" />

        <EditText
            android:id="@+id/status_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="1dp"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textColorHint="@color/grayBackground"
            android:hint="add a caption"
            android:padding="8dp"
            android:inputType="text"
            android:autofillHints="" />

        <!--<Button
            android:id="@+id/add_status_btn_send"
            android:layout_width="60dp"
