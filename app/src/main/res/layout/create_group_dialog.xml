<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="340dp"
    android:layout_gravity="center"
    android:layout_marginBottom="50dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Set Group name and image"
            android:textColor="#08877B"
            android:textSize="17sp"
            android:textStyle="bold|italic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dialog_group_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_profile_black"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <ImageButton
            android:id="@+id/dialog_btn_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="-25dp"
            android:layout_marginEnd="-25dp"
            android:background="@drawable/btn_round"
            android:src="@drawable/ic_add" />


        <EditText
            android:id="@+id/dialog_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:hint="Group Name"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_btn_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_faded_and_corner_blue"
                android:text="Create"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_faded_and_corner_red"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>